<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPersonaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIdEstudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="IdEstudio"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvNombreP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nombre del Personaje"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvPaisP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pais del Personaje"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvEdadP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Edad del Personaje"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnBorrarP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Borrar" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>